<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/png" href="~/img/logo.png" />
    <title>@ViewData["Title"] - Camino Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/tempus-dominus/css/tempusdominus-bootstrap-4.min.css" />
    @RenderSection("Head", required: false)
</head>
<body>
    <div class="page-container">
        <div class="row g-0">
            <div class="col col-12 col-sm-3 col-md-2 pe-0 collapse show" id="mainNavigation">
                @await Component.InvokeAsync("MainNavigation")
            </div>
            <div class="col col-12 col-sm-9 col-md-10 ps-0 main-col">
                @await Component.InvokeAsync("TopNavigation")

                <div class="main-body">
                    <div class="mt-3 px-3">
                        <span class="text-dark">
                            @RenderSection("BreadCrumb", required: false)
                        </span>
                    </div>

                    <div class="px-3">
                        <div class="card mt-3 mb-3 px-0 box-shadow">
                            @RenderBody()
                        </div>
                    </div>
                </div>

                @await Component.InvokeAsync("Footer")
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/moment/js/moment.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/tempus-dominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
