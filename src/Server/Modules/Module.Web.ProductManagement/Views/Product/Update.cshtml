@model ProductModel
@{
    ViewData["Title"] = $"Update product {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <link rel="stylesheet" href="~/lib/fileupload/css/jquery.fileupload.css" />
    <link rel="stylesheet" href="~/productmanagement/css/product-update.css" />
}

@section Scripts {
    <script src="~/lib/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/lib/fileupload/js/vendor/jquery.ui.widget.js" asp-append-version="true"></script>
    <script src="~/lib/fileupload/js/jquery.fileupload.js" asp-append-version="true"></script>
    <script src="~/productmanagement/js/product-update.js" asp-append-version="true"></script>
}

<div class="card-header bg-dark text-light">
    <a asp-action="Index" asp-controller="Product" class="btn btn-sm btn-outline-secondary">
        <i class="fa fa-arrow-left"></i>
    </a>
    @ViewData["Title"]
</div>
<div class="card-body">
    <form method="post" asp-action="Update" asp-controller="Product">
        <partial name="Partial/_UpdateForm" />
    </form>
</div>

@{
    var productIdModel = new ProductIdRequestModel { Id = Model.Id, ShouldKeepUpdatePage = true };
}
<partial name="Partial/_ActivateModal" model="productIdModel" />
<partial name="Partial/_DeactivateModal" model="productIdModel" />
<partial name="Partial/_RestoreModal" model="productIdModel" />
<partial name="Partial/_PermanentlyDeleteModal" model="productIdModel" />
<partial name="Partial/_TemporaryDeleteModal" model="productIdModel" />
<partial name="Partial/_ProductAttributeUpdateModel" model="new ProductAttributeRelationModel()" />
<partial name="Partial/_ProductAttributeDeleteModel" model="new ProductAttributeRelationModel()" />