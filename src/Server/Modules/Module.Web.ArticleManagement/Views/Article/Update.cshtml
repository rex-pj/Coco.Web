@model ArticleModel
@{
    ViewData["Title"] = $"Update article {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <link rel="stylesheet" href="~/lib/fileupload/css/jquery.fileupload.css" />
}

@section Scripts {
    <script src="~/lib/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/lib/fileupload/js/vendor/jquery.ui.widget.js" asp-append-version="true"></script>
    <script src="~/lib/fileupload/js/jquery.fileupload.js" asp-append-version="true"></script>
    <script src="~/articlemanagement/js/article-update.js" asp-append-version="true"></script>
}

<div class="card-header bg-dark text-light">
    <a asp-action="Index" asp-controller="Article" class="btn btn-sm btn-outline-secondary">
        <i class="fa fa-arrow-left"></i>
    </a>
    @ViewData["Title"]
</div>
<div class="card-body">
    <form method="post" asp-action="Update" asp-controller="Article">
        <partial name="Partial/_UpdateForm" />
    </form>
</div>
@{
    var articleIdModel = new ArticleIdRequestModel { Id = Model.Id, ShouldKeepUpdatePage = true };
}
<partial name="Partial/_ActivateModal" model="articleIdModel" />
<partial name="Partial/_DeactivateModal" model="articleIdModel" />
<partial name="Partial/_RestoreModal" model="articleIdModel" />
<partial name="Partial/_PermanentlyDeleteModal" model="articleIdModel" />
<partial name="Partial/_TemporaryDeleteModal" model="articleIdModel" />