@model ArticleCategoryModel
@{
    ViewData["Title"] = "Article Category Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-header bg-dark text-light">
    <div class="row">
        <div class="col-auto me-auto">
            <a asp-action="Index" asp-controller="ArticleCategory" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-arrow-left"></i>
            </a>
            @ViewData["Title"]
        </div>
        <div class="col-auto">
            @if (Model.CanUpdate)
            {
                <a asp-action="Update" asp-controller="ArticleCategory" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit"></i>
                </a>
            }
        </div>
    </div>
</div>
<div class="card-body">
    <div class="mb-3">
        <label>Name</label>
        <span class="form-control" readonly>@Model.Name</span>
    </div>
    <div class="mb-3">
        <label>Description</label>
        <span class="form-control" readonly>@Model.Description</span>
    </div>
    <div class="mb-3">
        <label>Created by</label>
        <span class="form-control" readonly>@Model.CreatedBy</span>
    </div>
    <div class="mb-3">
        <label>Created date</label>
        <span class="form-control" readonly>@Model.CreatedDate.ToDateHourMinusFormat()</span>
    </div>
    <div class="mb-3">
        <label>Updated by</label>
        <span class="form-control" readonly>@Model.UpdatedBy</span>
    </div>
    <div class="mb-3">
        <label>Updated date</label>
        <span class="form-control" readonly>@Model.UpdatedDate.ToDateHourMinusFormat()</span>
    </div>
    @if (Model.ParentId.HasValue)
    {
        <div class="mb-3">
            <label>Parent</label>
            <span class="form-control" readonly>@Model.ParentCategoryName</span>
        </div>
    }
    <div class="row mb-3">
        <label class="form-label">Status:</label>
        <div>
            <partial name="Partial/_StatusBadge" />
        </div>
    </div>
</div>