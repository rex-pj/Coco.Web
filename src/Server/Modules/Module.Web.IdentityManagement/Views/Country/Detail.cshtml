@model CountryModel
@{
    ViewData["Title"] = "Country Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header bg-dark text-light">
    <div class="row">
        <div class="col-auto me-auto">
            <a asp-action="Index" asp-controller="Country" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-arrow-left"></i>
            </a>
            @ViewData["Title"]
        </div>
        <div class="col-auto">
            @if (Model.CanUpdate)
            {
                <a asp-action="Update" asp-controller="Country" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                    <i class="fa fa-edit"></i>
                </a>
            }
        </div>
    </div>
</div>
<div class="card-body">
    <div class="mb-3">
        <label>#Id</label>
        <span class="form-control" readonly>@Model.Id</span>
    </div>
    <div class="mb-3">
        <label>Code</label>
        <span class="form-control" readonly>@Model.Code</span>
    </div>
    <div class="mb-3">
        <label>Name</label>
        <span class="form-control" readonly>@Model.Name</span>
    </div>
</div>