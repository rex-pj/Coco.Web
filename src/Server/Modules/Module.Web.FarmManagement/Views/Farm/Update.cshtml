@model FarmModel
@{
    ViewData["Title"] = $"Update farm {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <link rel="stylesheet" href="~/lib/fileupload/css/jquery.fileupload.css" />
    <link rel="stylesheet" href="~/farmmanagement/css/farm-update.css" />
}

@section Scripts {
    <script src="~/lib/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/lib/fileupload/js/vendor/jquery.ui.widget.js" asp-append-version="true"></script>
    <script src="~/lib/fileupload/js/jquery.fileupload.js" asp-append-version="true"></script>
    <script src="~/farmmanagement/js/farm-update.js" asp-append-version="true"></script>
}

<div class="card-header bg-dark text-light">
    <a asp-action="Index" asp-controller="Farm" class="btn btn-sm btn-outline-secondary">
        <i class="fa fa-arrow-left"></i>
    </a>
    @ViewData["Title"]
</div>
<div class="card-body">
    <form method="post" asp-action="Update" asp-controller="Farm">
        <partial name="Partial/_UpdateForm" />
    </form>
</div>
@{ 
    var farmIdModel = new FarmIdRequestModel { Id = Model.Id, ShouldKeepUpdatePage = true };
}
<partial name="Partial/_ActivateModal" model="farmIdModel" />
<partial name="Partial/_DeactivateModal" model="farmIdModel" />
<partial name="Partial/_RestoreModal" model="farmIdModel" />
<partial name="Partial/_PermanentlyDeleteModal" model="farmIdModel" />
<partial name="Partial/_TemporaryDeleteModal" model="farmIdModel" />